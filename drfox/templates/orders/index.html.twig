{% extends 'base.html.twig' %}

{% block title %}Hello OrdersController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Orders</h1>
        <ul>
            {% for order in orders %}
                <li>
                    <a href="{{ path('order_item', {'id': order.id}) }}">{{ order.productName }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
